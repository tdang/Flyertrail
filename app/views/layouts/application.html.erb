<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
	<section>
	    <div id="container">
	        <% flash.each do |key, value| %>
	          <div class="flash <%= key %>"><%= value %></div>
	        <% end %>
	        <%= yield %>
		</div>
		<div>
	      <%= render 'layouts/footer' %>
	      <%= debug(params) if Rails.env.development? %>
		  <%= javascript_include_tag( 'debug' )%>
	    </div>
	</section>
  </body>
</html>